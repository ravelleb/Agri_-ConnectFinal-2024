@model IEnumerable<Agri__ConnectFinal.Models.Farmer>

<h1>Select a Farmer</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.Name</td>
                <td>
                    <a asp-action="ViewProducts" asp-route-farmerId="@farmer.Id" class="btn btn-primary">View Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>
